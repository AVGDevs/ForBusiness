<h1>Tarefas</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>Tarefa</th>
        <th>Empresa</th>
        <th>Data de vencimento</th>
    </tr>

<% @fato.each do |f| %>
    <tr>
        <td> <%= f.tarefa.nomeTarefa %> </td>
        <td> <%= f.empresa.nomeEmpresa %> </td>
        <td> <%= f.dataVencimentoTarefa %> </td>
    </tr>
<% end %>
</table>
