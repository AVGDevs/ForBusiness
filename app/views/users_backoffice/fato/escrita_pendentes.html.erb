<h1>Tarefas Pendentes da Escrita Fiscal</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>Tarefas da Escrita</th>
        <th>Empresa</th>
        <th>Data de vencimento</th>
    </tr>

<% @escrita_pendentes.each do |f| %>
    <tr>
        <td> <%= f.tarefa.nomeTarefa %> </td>
        <td> <%= f.empresa.nomeEmpresa %> </td>
        <td> <%= f.dataVencimentoTarefa %> </td>
        <td> <%= link_to image_tag("check.png"), action: "concluir_escrita", id: f %> </td>
    </tr>
<% end %>
</table>
