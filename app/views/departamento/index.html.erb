<h1>Departamentos</h1>

<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <tr>
            <th>Nome do departamento</th>
            <th>Abreviação</th>
            <th>Editar</th>
            <th>Excluir</th>
        </tr>

    <% @departamento.each do |d| %>
        <tr>
            <td> <%= d.nomeDepartamento %> </td>
            <td> <%= d.abreviacao %> </td>
            <td> <%= link_to("", {action: "edit", id: d}, class: "fas fa-edit fa-lg") %> </td>
            <td> <%= link_to("", {action: "delete_departamento", id: d}, class: "fas fa-trash-alt fa-lg") %> </td>
        </tr>
    <% end %>
    </table>
</div>
<br>
<div>
    <%= link_to("Novo departamento", {controller: "departamento", action: "new"}, class: "btn btn-primary btn-sm") %>
</div>