<h1>Tarefas</h1>

<table class="table table-striped table-hover">

    <tr>
        <th>Id Tarefa</th>
        <th>Nome da tarefa</th>
        <th>Departamento</th>
    </tr>

<% @tarefa.each do |t|%>
    <tr>
        <td> <%= t.id %></td>
        <td> <%= t.nomeTarefa %></td>
        <td> <%= t.departamento.nomeDepartamento %></td>
        <td> <%= link_to "Editar", action: "edit", id: t %> </td>
        <td> <%= link_to "Apagar", action: "delete_tarefa", id: t%> </td>
    </tr>
<% end %>
</table>

<br>

<%= link_to "Criar nova tarefa", action: "new"%>