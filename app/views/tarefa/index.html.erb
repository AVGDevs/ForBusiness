<h1>Tarefas</h1>

<div class="table-responsive">
  	<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    	<tr>
            <th>Nome da tarefa</th>
            <th>Departamento</th>
            <th>Status</th>
            <th>Editar</td>
            <th>Excluir</td>
        </tr>

        <% @tarefa.each do |t|%>
            <tr>
                <td> <%= t.nomeTarefa %></td>
                <td> <%= t.departamento.nomeDepartamento %></td>
                <td> <%= t.situacao.situacao %> </td>
                <td> <%= link_to("", {action: "edit", id: t}, class: "fas fa-edit fa-lg")%> </td>
                <td> <%= link_to("", {action: "delete_tarefa", id: t}, class: "fas fa-trash-alt fa-lg" )%> </td>
            </tr>
        <% end %>
    </table>
</div>

<%= link_to("Criar nova tarefa", {action: "new"}, class: "btn btn-primary btn-sm")%>